#python
#draw with turtle

import turtle
import random

def square():
    for i in range(1, 5):
        turtle.forward(150)
        turtle.left(90)

def circle():
    turtle.circle(100)

def triangle():
    turtle.forward(280)
    turtle.left(135)
    turtle.forward(200)
    turtle.left(90)
    turtle.forward(200)
    turtle.left(45)

ummm = random.randint(1, 3)
if ummm == 1:
   square()
if ummm == 2:
   circle()
if ummm == 3:
   triangle()

# so easy, right ?
